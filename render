#!/bin/python3

from matplotlib import image, offsetbox, pyplot
import random

def getImage(path):
    return offsetbox.OffsetImage(image.imread(path))

stbar = getImage("graphics/stbar.png")
forward = getImage("graphics/stfst01.png")
right = getImage("graphics/stfst00.png")
left = getImage("graphics/stfst02.png")

facelist = [forward, right, left]

xs = [160, 160]
ys = [16, 16]

fig, ax = pyplot.subplots()

fig.canvas.toolbar.pack_forget()

while True:
    pyplot.cla()
    ax.axis("off")
    ax.scatter(xs, ys)
    images = [stbar, random.choice(facelist)]
    for image, x, y in zip(images, xs, ys):
        ab = offsetbox.AnnotationBbox(image, (x, y), frameon=False)
        ax.add_artist(ab)
    pyplot.pause(1)
